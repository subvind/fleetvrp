<div class="container">
  <div class="row">
    <% navigation.forEach(nav => { %>
      <div class="col s12 m6">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><%= nav.name %></span>
            <p><%= nav.description %></p>
          </div>
          <div class="card-action">
            <a href="<%= nav.url %>" class="waves-effect waves-light btn blue darken-2 fluid"><i class="material-icons left"><%= nav.icon %></i> <%= nav.name %></a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>